  zoom: 1;
}

@mixin skeleton($var) {
  position: relative;
  &:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background: $var;
    color: $var;
    z-index:9999;
  }
}

@mixin inline-block-important(){
  display: inline-block !important;
  *display: inline !important;
  zoom: 1 !important;
}

@mixin placeholder($var){
  &::-webkit-input-placeholder {
    color: $var;
    text-tranform: lowercase;
  }
  &:-moz-placeholder {
    color: $var;
    text-tranform: lowercase;
  }
  &::-moz-placeholder {
    color: $var;
    text-tranform: lowercase;
  }
  &:-ms-input-placeholder {
