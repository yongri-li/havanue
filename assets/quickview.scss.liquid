/*Fix img drop bottom*/
.viewmore-main.init-media {
  position: relative;
}
.viewmore-main.init-media .image-item:not(.js-cover-wrap) {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
}
#quickViewModal {
  .product-name-h1 {
    border: none;
  }
  .description {
    margin-top: 15px;
  }
}
.qv-details-link {
  margin-top: 5px;
  display: inline-block;
  text-decoration: underline;  
}