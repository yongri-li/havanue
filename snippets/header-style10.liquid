<div class="group-header group-header-style2 group-header-style8 group-header-style9{% if section.settings.nav_sticky %} sticky-menu{% endif %}">
  <section class="main-header hidden-xs hidden-sm">
    <div class="main-header-wrapper">
      <div class="container{% if section.settings.full_width %}-fluid{% endif %}">
        <div class="row">
          <div class="main-header-inner">
            <div data-section-id="{{ section.id }}" data-section-type="header-section">  
              <div class="top_header_wrapper">
                <div class="top_header">
                  <div class="left-area col-xs-2">       
                    {% include 'header_logo' %}
                  </div>
                  <div class="middle-area col-xs-8">
                    <div class="nav-header hidden-xs">
                      <div class="nav-header-wrapper">
                        <div class="nav-header-inner">
                          <div class="nave-header-group">
                            <nav class="site-nav small--hide" id="AccessibleNav" role="navigation">
                              {% include 'site-nav' with dataMenu: '{"fixedLeftParent": ".row"}' %}
                            </nav>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="right-area col-xs-2">
                    <div class="search_form">
                      <div class="site-header__search">
                        <a href="#" class="cdz-search-trigger">{% include 'icon-search' %}</a>
                      </div>
                    </div> 
                    <div class="account_group">
                      <a href="#">{% include 'icon-list-menu' %}</a>
                      <div class="dropdow_account">
                        {% include 'header_links' %}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="top-header">
    <div class="top-header-wrapper">
      <div class="container{% if section.settings.full_width %}-fluid{% endif %}">
        <div class="row">
          <div class="top-header-inner-group">
            <div class="top-header-inner col-sm-12">
              <div class="left-area">
                <div class="left-social-icon">
                  <div class="icon_wrapper">
                    <div class="icon_inner">
                      <a href="#">{% include 'icon-facebook' %}</a>
                      <a href="#">{% include 'icon-twitter' %}</a>
                      <a href="#">{% include 'icon-google' %}</a>
                      <a href="#">{% include 'icon-pinterest' %}</a>
                    </div>
                  </div>
                </div>
              </div>
              <div class="right-area">
                {% include 'header_cart' %} 
              </div>          
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  {% include 'header_nav_mobile' %}
</div>
{% include 'header_menu_mobile' %}