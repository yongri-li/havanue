<div class="group-header group-header-style3{% if section.settings.nav_sticky %} sticky-menu{% endif %}">
  <section class="top-header">
    <div class="top-header-wrapper">
      <div class="container{% if section.settings.full_width %}-fluid{% endif %}">
        <div class="row">
          <div class="top-header-inner-group">
            <div class="top-header-inner col-sm-12">
              <div class="contact_group">
                <ul class="contact_wrapper">
                  <li class="contact"><span class="brackets skeleton-loading" data-trans-key="customer.addresses.phone">{{ 'customer.addresses.phone' | t }}</span>: {{ shop.phone }}</li>
                  <li class="email"><span class="brackets skeleton-loading" data-trans-key="contact.form.email">{{ 'contact.form.email' | t }}</span>: {{ shop.email }}</li>
                  <li class="delivery"><span class="brackets skeleton-loading" data-trans-key="sections.header.world_wide_delivery">{{ 'sections.header.world_wide_delivery' | t }}</span></li>
                  <li class="shipping"><span class="brackets skeleton-loading" data-trans-key="sections.header.shipping_text">{{ 'sections.header.shipping_text' | t }}</span></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="main-header hidden-xs hidden-sm">
    <div class="main-header-wrapper">
      <div class="container{% if section.settings.full_width %}-fluid{% endif %}">
        <div class="row">
          <div class="main-header-inner">
            <div data-section-id="{{ section.id }}" data-section-type="header-section">  
              <div class="top_header_wrapper">
                <div class="top_header">
                  <div class="left-area col-xs-4">       
                    {% include 'header_logo' %}
                  </div>
                  <div class="middle-are col-xs-4">
                    <div class="search_form">
                      <div class="site-header__search">
                        {% include 'search-form', align_suggestion_class: 'sug-left' %}
                      </div>
                    </div>
                  </div>
                  <div class="right-area col-xs-4">
                    {% include 'header_cart' %} 
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <div class="bottom-header hidden-xs hidden-sm">
    <div class="main-header-wrapper">
      <div class="container{% if section.settings.full_width %}-fluid{% endif %}">
        <div class="row">
          <div class="bottom-header-group">
            <div class="nav-header col-xs-8 hidden-xs">
              <div class="nav-header-wrapper">
                <div class="nav-header-inner">
                  <div class="nave-header-group">
                    <nav class="site-nav small--hide" id="AccessibleNav" role="navigation">
                      {% include 'site-nav' %}        
                    </nav>
                  </div>
                </div>
              </div>
            </div>
            <div class="right-header-link col-xs-4">
              <div class="account_group">
                <a href="#" class="icon_account">
                  <span>Your account</span>{% include 'icon-arrow' %}
                </a>
                <div class="dropdow_account">
                  {% include 'header_links' %}
                </div>
              </div>
              {% include 'language-picker' %}
              {% if settings.show_multiple_currencies %}
              <div class="is-mobile-currency currency_group">
                <div class="currencies-switcher"> 
                  {% include 'currencies-switcher' with settings.currency_style %}
                </div>
              </div>
              {% endif %} 
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {% include 'header_nav_mobile' %}
</div>
{% include 'header_menu_mobile' %}