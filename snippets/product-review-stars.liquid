{%- comment -%}show review stars on product page{%- endcomment -%}
{%- if settings.enable_review -%}
	{%- case settings.review_app -%}
	  {%- when 'product_review' -%}
	  	{%- if product.metafields.spr.reviews -%}
	     	<span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
	    {%- else -%}
	     	<span class="brackets skeleton-loading" data-trans-key="products.product.first_review">{{ 'products.product.first_review' | t }}</span>
	    {%- endif -%} 
	  {%- when 'ryviu' -%}
	  	{%- if product.metafields.ryviu.reviews -%}
	    	<div class="ryviu-widget"></div>
	    {%- else -%}
	     	<span class="brackets skeleton-loading" data-trans-key="products.product.first_review">{{ 'products.product.first_review' | t }}</span>
	    {%- endif -%}	
	  {%- when 'loox' -%}
	  	{%- if product.metafields.loox.num_reviews -%}
				<div class="loox-rating" data-fetch data-id="{{ product.id }}"></div>
			{%- else -%}
	     	<span class="brackets skeleton-loading" data-trans-key="products.product.first_review">{{ 'products.product.first_review' | t }}</span>
			{%- endif -%}
	  {%- else -%}
	    {%- comment -%}Add your review code{%- endcomment -%}
	{%- endcase -%}
{%- endif -%}