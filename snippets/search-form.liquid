<form action="/search" method="get" class="search-header search{% if align_suggestion_class != blank %} {{ align_suggestion_class }}{% endif %}" role="search">
  <input class="search-header__input search__input"
    type="search"
    name="q"
    data-placeholder-trans="general.search.placeholder" data-placeholder-default="{{ 'general.search.placeholder' | t }}" placeholder="{{ 'general.search.placeholder' | t }}" aria-label="{{ 'general.search.placeholder' | t }}"
    :value="getParameterByName('q')">
  <button class="search-header__submit search__submit btn--link" type="submit">
    <span class="search-icon-normal">{% include 'icon-search' %}</span>
    <span class="search-icon-focus">{% include 'icon-arrow-right' %}</span>
    <span class="icon__fallback-text"><span class="brackets skeleton-loading" data-trans-key="general.search.submit">{{ 'general.search.submit' | t }}</span></span>
  </button>
  {% if section.settings.search_type != 'all' %}
    <input type="hidden" name="type" value="{{ section.settings.search_type }}" />
  {% endif %}
</form>
