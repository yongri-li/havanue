<div class="footer-wrapper footerApp {{ section.settings.footer_style }}" id="footer_{{ section.id }}_section" data-section-id="{{ section.id }}" data-section-type="footer" v-cloak>
  {% include section.settings.footer_style %}
  {% include 'footer-cart' %}
  {% include 'modals' %}
  
  {% if settings.general_gototop %}
  <div id="back-top" style="display: none;"><a data-title-trans="general.field.top_btn" data-title-default="{{ 'general.field.top_btn' | t }}" title="{{ 'general.field.top_btn' | t }}" href="#top">{% include 'icon-arrow-up' %}</a></div>
  {% endif %}
</div>
{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "select",
        "id": "footer_style",
        "label": "Choose footer style",
        "options": [
          {
            "value": "footer-style1",
            "label": "Footer Style 1"
          },
          {
            "value": "footer-style2",
            "label": "Footer Style 2"
          },
          {
            "value": "footer-style3",
            "label": "Footer Style 3"
          },
          {
            "value": "footer-style4",
            "label": "Footer Style 4"
          }
